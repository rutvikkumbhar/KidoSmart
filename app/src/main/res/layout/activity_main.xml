<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                android:backgroundTint="@color/image_background"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/alphabet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:src="@drawable/alphabet"></ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:backgroundTint="@color/image_background"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:src="@drawable/number"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                android:backgroundTint="@color/image_background"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:src="@drawable/color"></ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:backgroundTint="@color/image_background"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/animal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:src="@drawable/animal"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                android:backgroundTint="@color/image_background"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/shape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:src="@drawable/shape"></ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:backgroundTint="@color/image_background"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/quiz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:src="@drawable/quiz"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>